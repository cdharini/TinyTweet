<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.projects.cdharini.tinytweet.fragments.ReplyFragment">

    <!-- TODO: Update blank fragment layout -->
<EditText
        android:id="@+id/etReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="@null"
        android:hint="Tweet your reply"
        tools:text="\@username here is a reply"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="131dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/etReply"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorIcons"
        android:text="@string/reply"/>

    <TextView
        android:id="@+id/tvReplyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etReply"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        tools:text="Replying to @username"/>

    <ImageButton
        android:id="@+id/ibCancel"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnSend"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/colorIcons"
        android:src="@drawable/ic_cancel_black_24dp"/>

</RelativeLayout>
